<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="@dimen/height_navigationdrawer_item"
  android:background="?android:attr/activatedBackgroundIndicator"
  android:orientation="horizontal"
  >

  <ImageView
    android:id="@+id/imageview_texticon_icon"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/keyline_navigationdrawer_first"
    android:src="@drawable/ic_label_24dp"
    android:tint="@color/drawer_icon"
    />

  <TextView
    android:id="@+id/textview_texticon_name"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/keyline_navigationdrawer_second"
    android:layout_marginEnd="@dimen/keyline_navigationdrawer_third"
    android:ellipsize="end"
    android:gravity="center_vertical"
    android:lines="1"
    android:singleLine="true"
    android:textColor="@color/drawer_text"
    android:textSize="@dimen/textsize_navigationdrawer_item"
    tools:text="Lorem ipsum dolor sit amet, consectetur cras amet."/>

</LinearLayout>